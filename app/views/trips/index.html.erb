<h1>Listing your trips:</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>City</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Blurb?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.city %></td>
        <td><%= trip.start_date %></td>
        <td><%= trip.end_date %></td>
        <td><%= trip.blurb.present? %></td>
        <td><%= link_to 'Show', root_path(id: trip.id) %></td>
        <!-- <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
        <td><%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>
